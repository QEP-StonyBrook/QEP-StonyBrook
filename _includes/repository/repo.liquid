{% comment %}
  repo.liquid
  Input:
    include.repository = "username/repository"
  Output:
    Clickable repository name linking to GitHub
{% endcomment %}

{% assign repo_url = include.repository | split: '/' %}
{% assign repo_owner = repo_url[0] %}
{% assign repo_name  = repo_url[1] %}

<div class="repo p-2 text-center">
  <a
    href="https://github.com/{{ include.repository }}"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="GitHub repository {{ repo_name }}"
  >
    {{ repo_name }}
  </a>
</div>
